# Environment
NODE_ENV=production
ALLOW_NO_DB=false

# Server Configuration
PORT=5000
ALLOWED_ORIGINS=https://your-domain.com

# MongoDB Configuration
MONGO_URI=mongodb+srv://[YOUR_PRODUCTION_USERNAME]:[YOUR_PRODUCTION_PASSWORD]@[YOUR_CLUSTER].mongodb.net/[YOUR_DB]?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-long-random-production-secret-key-here
JWT_EXPIRE=30d

# Admin Configuration
ADMIN_PHONE=your-admin-phone
ADMIN_PASSWORD=your-strong-admin-password
ADMIN_REFERRAL=000000 